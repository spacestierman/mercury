{
	"settings": {
		"projectName": "Sample Project",
		"namespace": "Com.Space150.SampleProject"
	},
	"plugins": [
		{
			"type": "Mercury.Plugins.ASPMVC4.AspMvc4MercuryPlugin",
			"settings": {
				"namespace": "Com.Space150.SampleProject.Web"
			}
		}
	],
	"entities": [
		{
			"name": "ContactFormRequests",
			"displayName": "Contact Form Requests",
			"fields": [
				{
					"name": "RecordID",
					"type": "integer",
					"isPrimaryKey": true,
					"validation": []
				},
				{
					"name": "FirstName",
					"displayName": "First Name",
					"type": "nvarchar",
					"validation": [
						{ 
							"type": "Mercury.Validations.RequiredValidation"
						},
						{ 
							"type": "Mercury.Validations.MaximumLengthValidation",
							"settings": {
								"maximumLength": 250
							}
						}
					],
					"uiHint": "input[text]"
				},
				{
					"name": "LastName",
					"displayName": "Last Name",
					"type": "nvarchar",
					"validation": [
						{ 
							"type": "Mercury.Validations.RequiredValidation"
						},
						{ 
							"type": "Mercury.Validations.MaximumLengthValidation",
							"settings": {
								"maximumLength": 250
							}
						}
					],
					"uiHint": "input[text]"
				},
				{
					"name": "Email",
					"displayName": "Email",
					"type": "nvarchar",
					"validation": [
						{ "type": "Mercury.Validations.RequiredValidation" },
						{ "type": "Mercury.Validations.EmailValidation" }
					],
					"uiHint": "input[email]"
				},
				{
					"name": "Division",
					"displayName": "Division",
					"type": "nvarchar",
					"validation": [
						{ "type": "Mercury.Validations.RequiredValidation" }
					],
					"uiHint": "select",
					"values": [
						"Engineering",
						"Design",
						"UX",
						"Strategy",
						"AM/PM"
					]
				},
				{
					"name": "IndustryID",
					"displayName": "Industry",
					"type": "integer",
					"validation": [
						{ "type": "Mercury.Validations.RequiredValidation" }
					],
					"uiHint": "input[radio]",
					"references": {
						"entity": "Industries",
						"key": "IndustryID",
						"display": "Name"
					}
				},
				{
					"name": "Comments",
					"displayName": "Comments",
					"type": "text",
					"validation": [],
					"uiHint": "textarea"
				},
			]
		},
		{
			"name": "Industries",
			"displayName": "Industries",
			"fields": [
				{
					"name": "IndustryID",
					"type": "integer",
					"isPrimaryKey": true,
					"validation": []
				},
				{
					"name": "Name",
					"type": "nvarchar",
					"uiHint": "textbox",
					"validation": [
						{ 
							"type": "Mercury.Validations.RequiredValidation"
						},
						{ 
							"type": "Mercury.Validations.MinimumLengthValidation",
							"settings": {
								"minimumLength": 1
							}
						},
						{ 
							"type": "Mercury.Validations.MaximumLengthValidation",
							"settings": {
								"maximumLength": 250
							}
						}
					]
				}
			]
		}
	]
}